mixin numbers(id)
  - if ("alt" in attributes)
    - alt = attributes.alt;
    - delete attributes.alt;
  - else
    - alt = true;
  - if ("panelID" in attributes)
    - panelID = attributes.panelID;
    - delete attributes.panelID;
  - else
    - panelID = 1;
  - if ("fullscreen" in attributes)
    - fullscreen = attributes.fullscreen;
    - delete attributes.fullscreen;
  - else
    - fullscreen = "fullscreen";
  - if ("width" in attributes)
    - width = attributes.width;
    - delete attributes.width;
  - else
      - width = 450;
  - if ("height" in attributes)
    - height = attributes.height;
    - delete attributes.height;
  - else
      - height = 200;
  - if ("frameborder" in attributes)
    - frameborder = attributes.frameborder;
    - delete attributes.frameborder;
  - else
      - height = 0;


